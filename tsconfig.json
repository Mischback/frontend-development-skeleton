{
    "include": ["_src/ts/**/*"],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./_src/ts/",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "declaration": false,
        "sourceMap": false,
        "newLine": "lf",
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true
    }
}